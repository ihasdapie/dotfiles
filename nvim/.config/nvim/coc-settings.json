{
    "$schema": "http://json-schema.org/schema",

  /* "languageserver": { */
  /*   "golang": { */
  /*     "command": "gopls", */
  /*     "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"], */
  /*     "filetypes": ["go"] */
  /*   } */
  /* }, */

  "coc.source.emoji.filetypes": [
    "gitcommit",
    "markdown"
  ],
  "coc.source.coc-tabnine.priority": 50,
  "tabnine.priority": 50,

  "diagnostic.displayByAle": false,

 /* Coc-Python  */

  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": ["--disable=R,C"],
  "python.linting.flake8Enabled": true,
  /* "python.linting.mypyEnabled": true, */
  "python.venvPath": "/home/ihasdapie/.cache/pypoetry/virtualenvs",
  /* "coc.preferences.formatOnSaveFiletypes": ["python"], */


  /* Coc-Explorer */
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevicons": true,


  /* Coc-Diagnostics */
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",

  /* Coc-Snippets */
  "snippets.snipmate.enable": false,

  /* Coc-lua */
  // We want to be able to develop for neovim...
  "Lua.workspace.library": {
    "/usr/share/nvim/runtime/lua": true,
    "/usr/share/nvim/runtime/lua/vim": true,
    "/usr/share/nvim/runtime/lua/vim/lsp": true
  },
  "Lua.diagnostics.globals": [
    "vim"
  ],
  "git.enableGutters": false
}
